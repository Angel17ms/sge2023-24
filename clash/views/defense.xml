<odoo>
    <data>

    <record id="view_defense_tree" model="ir.ui.view">
        <field name="name">clash.defense.tree</field>
        <field name="model">clash.defense</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="type"/>
                <field name="village_id"/>
                <field name="level"/>
            </tree>
        </field>
    </record>

    <record id="view_defense_form" model="ir.ui.view">
        <field name="name">clash.defense.form</field>
        <field name="model">clash.defense</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="type"/>
                        <field name="village_id"/>
                        <field name="level"/>
                        <button string="Incrementar Nivel" class="oe_highlight" type="object"
                                name="button_increment_level"/>
                    </group>
                    
                        
                    
                </sheet>
            </form>
        </field>
    </record>


    </data>
</odoo>