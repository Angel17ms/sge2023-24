<odoo>
    <data>

    <record id="view_troop_type_tree" model="ir.ui.view">
        <field name="name">clash.troop_type.tree</field>
        <field name="model">clash.troop_type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="damage"/>
                <field name="health"/>
                <field name="cost_of_production"/>
                <field name="number_of_troops"/>
                <field name="camp_id"/>
            </tree>
        </field>
    </record>

    <record id="view_troop_type_form" model="ir.ui.view">
        <field name="name">clash.troop_type.form</field>
        <field name="model">clash.troop_type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="damage"/>
                        <field name="health"/>
                        <field name="cost_of_production"/>
                        <field name="number_of_troops"/>
                        <field name="camp_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_clash_troop_type_search" model="ir.ui.view">
    <field name="name">clash.troop_type.search</field>
    <field name="model">clash.troop_type</field>
    <field name="arch" type="xml">
        <search>
            <field name="name" string="Troop Name"/>
        </search>
    </field>
</record>


    </data>
</odoo>